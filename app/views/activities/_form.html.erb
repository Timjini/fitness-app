
<div class="container p-5">
<%= form_with(model: activity) do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field form-group">
    <%= form.label :Activity %>
    <%= form.select :title, options_for_select(["Tobata Workout", 
  "Weightlifting", 
   "Crunches","Running","Endurance Training","Hoop Workout","Stretching Exercises",
    "Squat Workout","Jogging","Stability Ball Workout","Yoga","Strength Training"]), 
  {}, { class: "form form-group form-control" } %>
  </div>
 
  <div class="field form-group">
    <%= form.label :state %>
    <%= form.select :state, Activity.states.keys.to_a ,{}, { class: "form form-group form-control" } %>
  </div>
<br>
  <div class="field form-group">
    <%#= form.label :created %>
    <%#= form.datetime_select :created ,{}, { class: "form form-group form-control" }  %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :activity_user_id, class:'form-control', value:current_user.id , type: :hidden %>
  </div>
  <div class="field form-group">
    <%#= form.label :finished %>
    <%#= form.datetime_select :finished  , class:"form-control"%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
    <%= link_to 'Back', activities_path, class:"btn btn-secondary" %>
  </div>
</div>
<% end %>
